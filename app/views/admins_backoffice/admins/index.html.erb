<h1 class="page-header">Administradores</h1>
<div class="table-responsible">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>
        <%= link_to '<span class="fa fa-plus"></span>'.html_safe, new_admins_backoffice_admin_path , class:"btn btn-success btn-circle" %>
      </th>
    </tr>
    <% @admins.each do |admin| %>
      <tr>
        <td class="small_col"><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td class="small_col">
          <%= link_to '<span class="fa fa-edit"></span>'.html_safe, edit_admins_backoffice_admin_path(admin.id) , class:"btn btn-primary btn-circle" %>
          <a type="button" class="btn btn-danger btn-circle"><span class="fa fa-times"></span></a>          
        </td>
      <tr>
    <% end %>
  </table>
</div>

<style>
  .small_col{
    width: 10%;
  }
</style>