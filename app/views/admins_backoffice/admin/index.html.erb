<h1 class="page-header">Administradores</h1>
<div class="table-responsible">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
    <% @admins.each do |admin| %>
      <tr>
        <td class="small_col"><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td class="small_col">
          <a type="button" class="btn btn-primary btn-circle"><span class="fa fa-edit"></span></a>
          <a type="button" class="btn btn-danger btn-circle"><span class="fa fa-times"></span></a>
        </td>
      <tr>
    <% end %>
  </table>
</div>

<style>
  .small_col{
    width: 10%;
  }
</style>